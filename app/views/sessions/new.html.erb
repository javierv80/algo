<% provide(:title, 'App - Login')%>

<h1>Logueate</h1>

<%= form_for(:session, url: sessions_path) do |f| %>

<p>
	<%= f.label :username, "Usuario" %>
	<%= f.text_field :username %>
</p>

<p>
	<%= f.label :password %>
	<%= f.password_field :password %>
</p>

<p><%= f.submit "Login" %></p>

<% end %>