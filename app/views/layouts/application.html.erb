<!DOCTYPE html>
<html>
<head>
  <title>Algo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav>
		<% if logged_in? %>
			<%= link_to "Crear cliente", "#" %>
			<%= link_to "Deslogueate (#{current_user.username})", logout_path, method: 'delete' %>
		<% else %>
			<%= link_to "Register", registro_path %>
			<%= link_to "Login", login_path %>

		<% end %>
	</nav>

<%= yield %>

</body>
</html>
